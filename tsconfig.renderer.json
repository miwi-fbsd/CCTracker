{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": false,
    "outDir": "dist/renderer"
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/main/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}